<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.regex_and_javadoc_assignment_week_09.RegistrationController"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label fx:id="firstNameError" GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="error-label"/>

    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label fx:id="lastNameError" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="error-label"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label fx:id="emailError" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="error-label"/>

    <Label text="Date of Birth (MM/DD/YYYY):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="dob" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label fx:id="dobError" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="error-label"/>

    <Label text="Zip Code:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="zipCode" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label fx:id="zipCodeError" GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="error-label"/>

    <Button fx:id="addButton" text="Add" onAction="#handleAddButton"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>
</GridPane>
